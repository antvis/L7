{
    "compilerOptions": {
      "noEmit": true,
      "strictPropertyInitialization": false,
      "downlevelIteration": true,
      "target": "es5",
      "lib": ["es6", "dom"],
      "module": "esnext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "rootDir": "./",
      "baseUrl": "./",
      "jsx": "react",
      "esModuleInterop": true,
      "types": ["jest"],
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "paths": {
        "*": ["node_modules", "typings/*"]
      }
    }
  }
  