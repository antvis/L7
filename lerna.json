{
  "packages": [
    "packages/*",
    "!packages/site"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "allowBranch": [
        "publish",
        "docs"
      ],
      "message": "chore: publish",
      "registry": "https://registry.npmjs.org"
    }
  },
  "version": "2.15.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "publishConfig": {
    "access": "public"
  }
}
