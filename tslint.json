{
  "extends": [
    "tslint:latest",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "no-bitwise": false,
    "no-console": [true, "log"],
    "object-literal-sort-keys": false,
    "no-implicit-dependencies": [true, "dev"],
    "interface-over-type-literal": false,
    "no-this-assignment": false,
    "no-submodule-imports": false
  },
  "globals": {
    "AMap": true
  },
  "linterOptions": {
    "exclude": [
      "stories/**",
      "**/*.d.ts",
      "**/data/*.ts",
      "**/*.{test,story}.ts{,x}",
      "node_modules/**"
    ]
  }
}
