{
  "name": "l7-monorepo",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/antvis/L7"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "vite dev --host",
    "dev_build": "vite build",
    "dev:ci": "vite dev",
    "start": "lerna --scope @antv/l7-site exec yarn run site:develop",
    "site:build": "lerna --scope @antv/l7-site exec yarn run site:build",
    "site:clean": "lerna --scope @antv/l7-site exec yarn run site:clean",
    "site:deploy": "lerna --scope @antv/l7-site exec yarn run site:deploy",
    "site:publish": "lerna --scope @antv/l7-site exec yarn run site:publish",
    "lint-fix": "prettier --write  packages/**/src/**/*.ts website/docs/api/**/*.md website/docs/api/*.md *.md",
    "lint:vite-demo": "eslint examples/ --ext .ts,.tsx",
    "lint:src": "eslint packages/ --ext .js,.ts --fix",
    "lint:examples": "eslint website/examples website/maptools website/.dumi/pages --fix --ext .js,.tsx",
    "lint:css": "stylelint 'packages/**/src/**/*.js{,x}'",
    "lint:package": "lerna run doctor",
    "lint": "run-p -c lint:*",
    "prebuild": "yarn clean && run-p lint",
    "build": "lerna run build --ignore @antv/l7-site",
    "version": "lerna version --force-publish --conventional-commits --exact --no-changelog",
    "version:prerelease": "lerna version --force-publish --exact --conventional-prerelease",
    "prerelease": "yarn build",
    "release": "lerna publish from-package --ignore @antv/l7-site  && yarn sync",
    "release-beta": "yarn run prerelease && lerna publish --dist-tag beta from-package --force-publish && yarn sync",
    "test": "run-p test:unit test:integration",
    "test:unit": "jest --config ./jest.config.ts",
    "test-cover": "jest --config ./jest.config.ts --coverage",
    "test:integration": "jest --config ./jest.e2e.config.ts",
    "clean": "lerna run clean --parallel",
    "clean-deps": "./scripts/clean-deps.sh",
    "changelog": "auto-changelog --output CHANGELOG.md",
    "translate": "translate  -d",
    "sync": "lerna run sync --parallel"
  },
  "lint-staged": {
    "*.md": [
      "case-police --fix"
    ],
    "*.less": [
      "stylelint --syntax less --fix"
    ],
    "*.{ts,tsx,js,mjs,jsx,json,md,css,less}": [
      "prettier --write"
    ],
    "*.{js,jsx,tsx,ts}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "d3-array": "1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "@antv/translator": "^1.0.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@turf/turf": "^6.5.0",
    "@types/gl": "^6.0.4",
    "@types/jest": "^29.5.1",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/pixelmatch": "^5.2.5",
    "@types/pngjs": "^6.0.3",
    "@umijs/fabric": "^4.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "antd": "^4.12.3",
    "auto-changelog": "^2.4.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-import-css-l7": "^0.0.6",
    "case-police": "^0.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "father": "^4.1.0",
    "geotiff": "^2.0.1",
    "globals": "^14.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.6.2",
    "jest-text-transformer": "^1.0.4",
    "jsdom": "^22.1.0",
    "kdbush": "^4.0.2",
    "lerna": "^3.16.4",
    "lil-gui": "^0.19.1",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "5.3.0",
    "playwright": "latest",
    "pmtiles": "^2.7.2",
    "pngjs": "^6.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^3.0.2",
    "stats.js": "^0.17.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "terminate": "latest",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.3.1",
    "vite": "^5.0.9",
    "vite-plugin-cp": "^4.0.3",
    "vite-plugin-static-copy": "^1.0.0",
    "vite-plugin-string": "^1.2.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "tnpm": {
    "mode": "yarn"
  }
}
