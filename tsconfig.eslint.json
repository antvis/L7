{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  // paths intend to lint
  "include": [
    "./*.?*.ts",
    "packages",
    "packages/*/.?*.ts",
    // examples workspace lint
    "examples",
    // test workspace lint
    "__tests__",
    // website workspace lint
    "site",
    "site/.?*.ts",
    // special: perfix .xxx directory will be ignored
    "site/.dumi/pages",
    "site/.dumi/theme",
    "site/.dumi/*.ts"
  ],
  "exclude": ["node_modules", "dist", "dist", "es", "lib", "legacy"]
}
