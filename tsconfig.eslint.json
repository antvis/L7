{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  // paths intend to lint
  "include": [
    "packages",
    "examples",
    "__tests__",
    "website",
    // special: perfix .xxx directory will be ignored
    "website/.dumi/pages",
    "website/.dumi/theme",
    "./*.ts"
  ],
  "exclude": ["node_modules", "dist", "dist", "es", "lib", "legacy"]
}
